<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/system_color"
    tools:context=".Count">

    <TextView
        android:id="@+id/tx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/maven_pro_black"
        android:text="adoc"
        android:textColor="#000"
        android:textSize="32sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tx"
        android:layout_below="@+id/tx2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Words: 0"
        android:textColor="@color/colorAccent"
        android:textSize="28sp"
        android:layout_marginBottom="20dp"/>


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tx"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rds"
        android:backgroundTint="#E0E4E8"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Paste text here"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="#111"
        android:textSize="18sp"
        app:layout_goneMarginTop="40dp" />
</RelativeLayout>